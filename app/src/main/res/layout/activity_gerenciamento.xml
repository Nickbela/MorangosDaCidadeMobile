<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Barra de Título -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_perfil_foreground"
                android:contentDescription="Ícone de Perfil"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gerenciamento de Perfil"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121" />
        </LinearLayout>

        <!-- Card de Informações Pessoais -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp"
            android:clipToOutline="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informações Pessoais"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etNome"
                android:layout_width="342dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#BDBDBD"
                android:hint="Nome Completo"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="342dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#BDBDBD"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etTelefone"
                android:layout_width="342dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#BDBDBD"
                android:hint="Telefone"
                android:inputType="phone"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Novo campo de CPF -->
            <EditText
                android:id="@+id/etCPF"
                android:layout_width="342dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#BDBDBD"
                android:hint="CPF"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="16sp" />

            <!-- Botão para Salvar Alterações -->
            <Button
                android:id="@+id/btnSalvarDadosPessoais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar Alterações"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginTop="16dp"
                android:padding="16dp" />
        </LinearLayout>

        <!-- Card de Endereço -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp"
            android:clipToOutline="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Endereço"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etCEP"
                android:layout_width="342dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#BDBDBD"
                android:hint="CEP"
                android:inputType="textPostalAddress"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etRua"
                android:layout_width="342dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#BDBDBD"
                android:hint="Rua"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNumero"
                android:layout_width="342dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#BDBDBD"
                android:hint="Número"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etCidade"
                android:layout_width="342dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#BDBDBD"
                android:hint="Cidade"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estado"
                android:backgroundTint="#BDBDBD"
                android:inputType="text"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:textSize="16sp"/>

            <!-- Botão para Salvar Alterações -->
            <Button
                android:id="@+id/btnSalvarEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar Endereço"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_marginTop="16dp"
                android:padding="16dp" />
        </LinearLayout>

        <!-- Card de Segurança -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="8dp"
            android:clipToOutline="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Segurança"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#757575"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnAlterarSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alterar Senha"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:padding="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
