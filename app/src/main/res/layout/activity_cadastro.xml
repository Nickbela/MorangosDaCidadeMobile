<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/logintitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/criesuaconta"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_marginTop="200dp" />

        <EditText
            android:id="@+id/nome"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="@string/nome"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/baseline_person_outline_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#404040"
            android:inputType="textPersonName"
            android:autofillHints="name"/>


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="@string/e_mail"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#404040"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress" />

        <EditText
            android:id="@+id/senha"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="@string/senha"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/baseline_senha_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#404040"
            android:inputType="textPassword"
            android:autofillHints="password" />

        <EditText
            android:id="@+id/cpf"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="@string/cpf"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/baseline_assignment_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#404040"
            android:inputType="number"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/telefone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="@string/telefone"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/baseline_phone_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#404040"
            android:inputType="phone"
            android:autofillHints="phone"/>

        <EditText
            android:id="@+id/cep"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="@string/cep"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/baseline_location_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#404040"
            android:inputType="number"
            android:autofillHints="postalCode"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/rua"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1.5"
                android:hint="@string/rua"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/baseline_home_24"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#404040"
                android:inputType="text"
                android:autofillHints="streetAddress" />

            <EditText
                android:id="@+id/numero_rua"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="0.5"
                android:layout_marginStart="8dp"
                android:hint="@string/numero"
                android:background="@drawable/edittext_background"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#404040"
                android:inputType="number"
                android:autofillHints="addressLine2" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/cidade"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1.5"
                android:hint="@string/cidade"
                android:background="@drawable/edittext_background"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#404040"
                android:inputType="text"
                android:autofillHints="addressLocality" />

            <EditText
                android:id="@+id/estado"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="0.5"
                android:layout_marginStart="8dp"
                android:hint="@string/estado"
                android:background="@drawable/edittext_background"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#404040"
                android:inputType="text"
                android:autofillHints="addressRegion"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:text="@string/registrar"
            android:textColor="@android:color/white"
            android:backgroundTint="#710808" />
    </LinearLayout>
</ScrollView>
