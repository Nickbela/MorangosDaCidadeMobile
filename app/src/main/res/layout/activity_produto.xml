<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar produtos..."
                android:padding="8dp"
                android:background="#FFFFFF"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#757575" />

            <Button
                android:id="@+id/buttonSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="#D32F2F"
                android:backgroundTint="#810000"
                android:text="Buscar"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Produto 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#F5F5F5"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <!-- Detalhes do Produto -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/textNomeProduto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Morango Albion | Cx 10kg"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textValorProduto1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor: R$ 150,00"
                    android:textSize="16sp"
                    android:textColor="#757575"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/editQuantidadeProduto1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:hint="Qtd"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="#FFFFFF"
                        android:layout_marginRight="16dp" />

                    <Button
                        android:id="@+id/buttonComprarProduto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comprar"
                        android:background="#f46b4c"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Imagem do Produto -->
            <ImageView
                android:id="@+id/imageProduto1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_albion1_foreground"
            android:contentDescription="Imagem do Produto"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />
        </LinearLayout>

        <!-- Produto 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
