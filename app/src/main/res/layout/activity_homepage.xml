<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Banner de Boas-Vindas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f46b4c"
            android:padding="24dp"
            android:marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bem-vindo à Fazenda de Morangos!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore nossos produtos frescos e feitos com carinho para você."
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_morango_foreground"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Imagem de Morangos" />
        </LinearLayout>

        <!-- Seção de Destaques -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destaques"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Card de Produto 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="8dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_box"
                    android:scaleType="centerCrop"
                    android:contentDescription="Caixa de Morangos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caixa de Morangos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 20,00"
                    android:textSize="14sp"
                    android:textColor="#4CAF50" />
            </LinearLayout>

            <!-- Card de Produto 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:padding="8dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_jam"
                    android:scaleType="centerCrop"
                    android:contentDescription="Pote de Geleia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Geleia Artesanal"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 15,00"
                    android:textSize="14sp"
                    android:textColor="#4CAF50" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botões de Navegação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnVerProdutos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Todos os Produtos"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnVerPedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meus Pedidos"
                android:backgroundTint="#FFC107"
                android:textColor="#FFFFFF"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
