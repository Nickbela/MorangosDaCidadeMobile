<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context="com.example.morangosdacidademobile.Perfil">


    <TextView
        android:id="@+id/tvWelcomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bemvindo"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#2C6B2F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvPersonalData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dadospessoais"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />


            <TextView
                android:id="@+id/Nome1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome1"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />


            <TextView
                android:id="@+id/Email1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Email1"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />


            <TextView
                android:id="@+id/Telefone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telefone1"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/Cpf1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cpf1"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp" />


            <TextView
                android:id="@+id/Endereco1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/endereco1"
                android:textSize="16sp"
                android:textColor="#666666" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:gravity="center">

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#008000"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:text="@string/editarperfil"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_excluir"
            android:layout_marginEnd="8dp" />


        <Button
            android:id="@+id/btn_excluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#710808"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:text="@string/excluircadastro"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_editar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            tools:ignore="UnknownId" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
