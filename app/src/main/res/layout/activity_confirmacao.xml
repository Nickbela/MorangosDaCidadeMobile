<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittext_background"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/verificacao"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/iconedeconfirmacao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmacao"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#008000"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Seção de Dados do Cliente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittext_background"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detalhes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/NomeCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nomecliente"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/TelefoneCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telefonecliente"
                android:textSize="16sp"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Seção de Detalhes do Pedido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittext_background"
            android:elevation="2dp"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detalhespedido"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/DetalhesPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pedido"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/Total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#008000" />
        </LinearLayout>

        <!-- Botões de Ação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            style="?android:attr/buttonBarButtonStyle">

            <Button
                android:id="@+id/btnConfirmarPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmar"
                android:backgroundTint="#008000"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button
                android:id="@+id/btnCancelarPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancelar"
                android:backgroundTint="#710808"
                android:textColor="#FFFFFF"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
