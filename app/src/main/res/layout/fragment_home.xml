<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <!-- Banner de Boas-Vindas -->
    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_fazenda1_foreground"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem-vindo à Fazenda de Morangos!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/ivBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Descrição abaixo do título -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produzimos morangos frescos e orgânicos com o maior cuidado para garantir qualidade e sabor incomparáveis."
        android:textSize="16sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Texto adicional sobre a fazenda -->
    <TextView
        android:id="@+id/tvFarmDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nossa fazenda está localizada no coração da cidade de São Paulo, um exemplo de fazenda urbana que combina sustentabilidade e inovação. Venha nos visitar e conheça como produzimos alimentos frescos perto de você!"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:textColor="#555555"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Texto sobre os produtos -->
    <TextView
        android:id="@+id/tvProductsInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Conheça nossos produtos e aproveite as ofertas especiais disponíveis para você! Produtos frescos, direto da fazenda para a sua casa."
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:textStyle="italic"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tvFarmDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Botão de ação -->
    <Button
        android:id="@+id/btnShopNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar Agora"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        app:cornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvProductsInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
